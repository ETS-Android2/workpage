<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:orientation="horizontal"
    android:background="@drawable/list_item">

    <LinearLayout android:id="@+id/task_list_item_colors"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:paddingEnd="5dp"
        android:orientation="vertical" />

    <LinearLayout android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView android:id="@+id/task_list_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView android:id="@+id/task_list_item_tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end" />

        <LinearLayout android:id="@+id/task_list_item_when_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView android:id="@+id/task_list_item_when_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end" />

            <ImageView android:id="@+id/task_list_item_when_dst"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="3dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/dst"
                android:alpha="0.5" />
        </LinearLayout>

        <TableLayout android:id="@+id/task_list_item_dates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow android:id="@+id/task_list_item_date1_row">
                <TextView android:id="@+id/task_list_item_date1_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingEnd="5dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView android:id="@+id/task_list_item_date1_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView android:id="@+id/task_list_item_date1_dst"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginStart="3dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/dst"
                        android:alpha="0.5" />
                </LinearLayout>
            </TableRow>
            <TableRow android:id="@+id/task_list_item_date2_row">
                <TextView android:id="@+id/task_list_item_date2_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingEnd="5dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView android:id="@+id/task_list_item_date2_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView android:id="@+id/task_list_item_date2_dst"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginStart="3dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/dst"
                        android:alpha="0.5" />
                </LinearLayout>
            </TableRow>
        </TableLayout>

        <TextView android:id="@+id/task_list_item_space1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView android:id="@+id/task_list_item_space2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView android:id="@+id/task_list_item_space3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>
