<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="5dp"
    android:paddingEnd="5dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"

    android:orientation="vertical"
    android:background="@drawable/list_item">

    <TextView android:id="@+id/time_zone_list_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView android:id="@+id/time_zone_list_item_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView android:id="@+id/time_zone_list_item_offset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end" />

        <ImageView android:id="@+id/time_zone_list_item_dst"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="3dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/dst"
            android:alpha="0.5" />
    </LinearLayout>
</LinearLayout>