<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="@string/view_2" />

        <RadioGroup android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton android:id="@+id/view_open"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/open"
                android:onClick="onViewRadioButtonClicked" />

            <RadioButton android:id="@+id/view_now"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/doable_now"
                android:onClick="onViewRadioButtonClicked" />

            <RadioButton android:id="@+id/view_closed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/closed"
                android:onClick="onViewRadioButtonClicked" />
        </RadioGroup>

        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="10dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="@string/filter_by_tags" />

        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="16sp"
            android:text="@string/select_tags" />

        <LinearLayout android:id="@+id/view_tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:orientation="vertical">

            <TextView android:id="@+id/view_noTags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:gravity="center_horizontal"
                android:visibility="gone"
                android:textSize="16dp"
                android:text="@string/no_tags" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
