<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <fragment android:name="jajimenez.workpage.ViewSettingsFragment"
            android:id="@+id/view_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="@string/filter_by_tags" />

        <LinearLayout android:id="@+id/view_tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:orientation="vertical">

            <CheckBox android:id="@+id/view_all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/all"
                android:onClick="onAllCheckBoxClicked" />

            <CheckBox android:id="@+id/view_noTag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/no_tag"
                android:onClick="onNoTagCheckBoxClicked" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
